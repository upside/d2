#!/usr/bin/env bash
set -euo pipefail

cd "$(dirname "$0")/../infra"

if [ ! -f .env ]; then
  cp .env.example .env
  echo "Created infra/.env from .env.example"
fi

docker compose up -d --build

echo "Infra is up. Backend: http://localhost:8080"
echo "Mercure: http://localhost:8080/.well-known/mercure"
